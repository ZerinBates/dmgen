package dnd;

public class npc {
public namegen rName = new namegen();
String name=rName.getName();

char GE;
char LC;
int level;
String clss;
int attitude;
String createQuest(){
	//System.out.println(name);
	double challengeRate =  (Math.random()*5-1);
	String descript = null;
	dice six = new dice(); 
	six.roll(6);
	// go and get them
	if (six.current==1){
		double distance = challengeRate*.5;
		//what to get
		dice four = new dice();
		four.roll(4);
		// personal object
			if (four.current==1){
				dice three = new dice();
				three.roll(2);
				if (three.current==1){
				descript+="Go and get journal (if opend contains 25% blackmail; 25% spell; 25% map; 25% trap)";
			}
				if (three.current == 2){
					descript+="Go and get letter (if opend contains password to secret organization, trap, blackmail";
				}
				if (three.current==3){
					descript+="Go and get evidence";
				}
			}
			//item
			if (four.current==2){
				if (challengeRate<2){
					
					descript+="Go and get magic item";
				}
			}
			//character
			if (four.current==3){
				npc guy = new npc();
				descript+="go and get "+guy.name;
			}
			if (distance > 1){
		}
		
	}
	
	
	return descript;
}

}
