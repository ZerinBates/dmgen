						descript+="from marsh";
					}
						if (dfour.current == 2){
							descript+="from mountians";
						}
						if (dfour.current==3){
							descript+="from lake";
						}
						if (dfour.current==0){
														
							descript+="from woods";
						}
					
				}
		}
		
	}
	// clear out
	if (six.current==2){
		descript += "Clear an encounter ";
		dice dfour = new dice();
		dfour.roll(4);
		if (dfour.current==1){
			descript+="from generate shelter";
		}
			if (dfour.current == 2){
				npc guy = new npc();
