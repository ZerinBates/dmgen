					}
					if (dfour.current==3){
						npc guy = new npc();
						descript+="from lake";
					}
					if (dfour.current==0){
						
						descript+="from woods";
					}
				
			}
	
	}
	//tracking
	if (six.current==3){
		descript += "Track ";
