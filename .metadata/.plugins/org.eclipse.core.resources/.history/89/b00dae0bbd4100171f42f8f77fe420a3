				if (three.current==0){
					descript+="Go and get evidence";
				}
			}
			//item
			if (four.current==2){
				if (challengeRate<2){
					
					descript+="Go and get magic item";
				}
			}
			//character
			if (four.current==3){
				npc guy = new npc();
				descript+="go and get "+guy.name;
			}
			if (distance < 1){
				dice three = new dice();
				three.roll(3);
				if (three.current==1){
					descript+="from a shop";
				}
					if (three.current == 2){
						npc guy = new npc();
						descript+="from "+guy.name;
					}
					if (three.current==0){
						descript+="from police vault";
					}
		}else{
			dice dfour = new dice();
			dfour.roll(4);
